@model IEnumerable<Competition_Tournament.Models.Player>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-custom">Players</h1>

<div class="container2">
    <p>
        <a class="create-custom" asp-action="Create">Create New</a>
    </p>

    <form method="get" class="margin-left">
        <label for="teamId">Team:</label>
        <select id="teamId" name="id" onchange="this.form.submit()">
            <option value="">All</option>
            @foreach (var item in ViewBag.Teams)
            {
                var selected = item.Value == ViewBag.SelectedTeamId?.ToString();
                <option value="@item.Value" selected="@selected">@item.Text</option>
            }
        </select>
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                Team Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTeamNavigation.Name)
            </td>
            <td>
                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
